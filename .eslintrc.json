{
    "plugins": [
        "react"
    ],
    "extends": ["plugin:react/recommended"],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "env": {
        "browser": true,
        "node": true
    },
    "rules": {
        "semi": 2,
        "indent": [
            "error",
            4
        ],
        "max-len": [
            "error",
            120
        ],
        "no-unused-vars": 2,
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error"
    }
}
